@model PopularProductTagsModel
@using Nop.Web.Models.Catalog
@if (Model.Tags.Count > 0)
{
    <div class="block block-popular-tags">
        <div class="title">
            @T("Products.Tags.Popular")
        </div>
        <div class="clear">
        </div>
        <div class="listbox">
            <div class="tags">
                <ul>
                    @foreach (var item in Model.Tags)
                    {
                        <li><a href="@Url.RouteUrl("ProductsByTag", new { productTagId = item.Id, SeName = item.Name })" style="font-size:@(Model.GetFontSize(item))%;">@item.Name</a>&nbsp;&nbsp;
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    
}